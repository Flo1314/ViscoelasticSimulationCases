FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.1; //mm -> cm

vertices
(
  (-1 -10  1) // 0
  ( 1 -10  1) // 1
  ( 1 -10 -1) // 2
  (-1 -10 -1) // 3
  (-1  10  1) // 4
  ( 1  10  1) // 5
  ( 1  10 -1) // 6
  (-1  10 -1) // 7
);

blocks
(                       //(x z y)
    hex (0 1 2 3 4 5 6 7) (1 1 8) simpleGrading (1 1 1)
);

edges
(
);

boundary
(

     left
     {
        type cyclic;
        neighbourPatch right;
	faces
        (
            (4 7 3 0)
        );
    }

    right
    {
        type cyclic;
	neighbourPatch left;
        faces
        (
            (6 5 1 2)
        );
    }

    walls
    {
        type wall;
        faces
        (
            (4 5 6 7)
            (3 2 1 0)
        );
    }
    
   frontAndBack
    {
        type empty;
        faces
        (
            (7 6 2 3)
            (5 4 0 1)
        );
    }   
);

mergePatchPairs
(
);

